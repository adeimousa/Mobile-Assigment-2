<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_style_1">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_style_2">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/blue_ex</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="linearLayoutHorizontal_style_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="txt_style_3">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt_LinerLayout_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/blue_ex</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="txt_style_4">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn_style_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">63dp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="header_layout_style_1">
        <item name="android:layout_width">412dp</item>
        <item name="android:layout_height">59dp</item>
        <item name="android:background">@color/blue_ex</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>