<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.teacher.TeacherActivity"
    >

    <EditText
        android:id="@+id/editTextSearchTeacher"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:ems="10"
        android:hint="Search"
        android:inputType="textPersonName" />

    <ListView
        android:id="@+id/teachersList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextSearchTeacher"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:divider="@color/white"
        android:dividerHeight="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:descendantFocusability="blocksDescendants"

        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addTeacherBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="52dp"
        android:clickable="true"
        app:tint="@android:color/white"
        app:backgroundTint="@color/student_blue1"
        app:rippleColor="@color/white"
        app:srcCompat="@drawable/ic_baseline_add_24" />

</RelativeLayout>